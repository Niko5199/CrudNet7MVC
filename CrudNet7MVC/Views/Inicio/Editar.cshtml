@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Editar Contacto";
}


<h1 class="text-center">Contacto con .NET 7 (.NET Core MVC)</h1>



<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                 <h3 class="text-white"><strong>Editar Usuario</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label" ></label>
                        <input asp-for="Name" class="form-control" placeholder="Ingresa tu Nombre"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone" class="control-label" ></label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingresa el telefono" type="tel"/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Movil" class="control-label" ></label>
                        <input asp-for="Movil" class="form-control" placeholder="Ingresa tu Movil" type="tel"/>
                        <span asp-validation-for="Movil" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label" ></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                   <div class="form-group mt-3">
                       <button type="submit" class="btn btn-primary d-block mx-auto"><i class="bi bi-pencil-fill"></i> Editar Usuario</button>
                   </div>
                </form>                
                    <a asp-controller="Inicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>

